<script>
document.addEventListener('DOMContentLoaded', function() {
  const form = document.getElementById('resume-form');
  const submitBtn = document.getElementById('submit-btn');
  const loadingContainer = document.getElementById('loading-container');
  const progressBar = document.getElementById('progress-bar');
  const progressPercent = document.getElementById('progress-percent');
  const progressText = document.getElementById('progress-text');

  // Debugging function to check element states
  function logElementStates() {
    console.log('Form element:', form);
    console.log('Form style display:', form ? form.style.display : 'null');
    console.log('Form computed display:', form ? window.getComputedStyle(form).display : 'null');
    console.log('Loading container:', loadingContainer);
    console.log('Loading container classes:', loadingContainer ? loadingContainer.className : 'null');
  }

  // Reset to initial state function
  function resetToInitialState() {
    console.log('Resetting to initial state');

    // Show form with important override
    if (form) {
      form.style.display = 'block !important';
      form.style.visibility = 'visible';
      form.style.opacity = '1';
      form.classList.remove('hidden');
    }

    // Hide loading container completely
    if (loadingContainer) {
      loadingContainer.classList.add('hidden');
      loadingContainer.style.display = 'none !important';
      loadingContainer.style.visibility = 'hidden';
    }

    // Reset progress
    if (progressBar) {
      progressBar.style.width = '0%';
    }
    if (progressPercent) {
      progressPercent.textContent = '0%';
    }
    if (progressText) {
      progressText.textContent = 'Initializing...';
    }

    // Clear file input
    const fileInput = document.getElementById('resume-upload');
    if (fileInput) {
      fileInput.value = '';
    }

    // Log states for debugging
    setTimeout(logElementStates, 100);
  }

  // Initialize page state immediately
  resetToInitialState();

  // Reset on page show (handles back button)
  window.addEventListener('pageshow', function(event) {
    console.log('Page show event, persisted:', event.persisted);
    setTimeout(resetToInitialState, 50);
  });

  // Additional reset for any cached states
  setTimeout(function() {
    console.log('Delayed reset');
    resetToInitialState();
  }, 200);

  const progressSteps = [
    { percent: 10, text: 'Reading PDF document...' },
    { percent: 25, text: 'Extracting text content...' },
    { percent: 40, text: 'AI analyzing personal information...' },
    { percent: 55, text: 'AI enhancing work experience...' },
    { percent: 70, text: 'AI categorizing skills and education...' },
    { percent: 85, text: 'AI generating professional summary...' },
    { percent: 95, text: 'Finalizing enhanced profile...' },
    { percent: 100, text: 'Complete! Redirecting...' }
  ];

  function updateProgress(step) {
    const { percent, text } = progressSteps[step];
    progressBar.style.width = percent + '%';
    progressPercent.textContent = percent + '%';
    progressText.textContent = text;
  }

  function simulateProgress() {
    let currentStep = 0;
    updateProgress(currentStep);

    const interval = setInterval(() => {
      currentStep++;
      if (currentStep < progressSteps.length) {
        updateProgress(currentStep);
      } else {
        clearInterval(interval);
      }
    }, 3875); // Update every 3.875 seconds for extended AI processing feel (31 seconds total)
  }

  form.addEventListener('submit', function(e) {
    const fileInput = document.getElementById('resume-upload');
    if (!fileInput.files.length) {
      alert('Please select a file to upload.');
      e.preventDefault();
      return;
    }

    console.log('Form submitted, starting animation');

    // Hide form completely and show loading animation
    form.style.display = 'none';
    form.style.visibility = 'hidden';
    form.style.height = '0';
    form.style.overflow = 'hidden';

    if (loadingContainer) {
      loadingContainer.classList.remove('hidden');
      loadingContainer.style.display = 'block !important';
      loadingContainer.style.visibility = 'visible';
    }

    // Start progress simulation
    simulateProgress();

    console.log('Animation started');
  });
});
</script>