<script>
console.log('=== SCRIPT TAG IS EXECUTING ===');
console.log('Current URL:', window.location.href);
console.log('Document ready state:', document.readyState);

// Get URL parameters immediately (outside DOMContentLoaded)
const urlParams = new URLSearchParams(window.location.search);
const orgName = urlParams.get('name');
const autoGenerate = urlParams.get('auto_generate') === 'true';

console.log('=== URL PARAMETERS (IMMEDIATE) ===', {
  orgName: orgName,
  autoGenerate: autoGenerate
});

// Function to handle auto-generate (can be called immediately or after DOM ready)
function handleAutoGenerate() {
  console.log('=== handleAutoGenerate called ===');

  const form = document.getElementById('org-form');
  const urlInput = document.getElementById('url-input');
  const submitBtn = document.getElementById('submit-btn');

  console.log('Elements found:', {
    form: !!form,
    urlInput: !!urlInput,
    submitBtn: !!submitBtn
  });

  if (!form || !urlInput) {
    console.error('Required elements not found yet');
    return false;
  }

  // Function to guess website URL
  function guessWebsiteUrl(name) {
    console.log('guessWebsiteUrl called with:', name);
    let baseName = name;
    if (name.includes(' - ')) {
      baseName = name.split(' - ')[0].trim();
      console.log('Split on " - ", using first part:', baseName);
    }

    // Check if it's already a domain name (contains .com, .org, .edu, etc.)
    const domainPattern = /\.(com|org|edu|net|gov|io|co|biz|info)$/i;
    if (domainPattern.test(baseName.toLowerCase())) {
      console.log('Input is already a domain:', baseName);
      // Just ensure it has https://
      let url = baseName.toLowerCase().trim();
      if (!url.startsWith('http://') && !url.startsWith('https://')) {
        url = 'https://' + (url.startsWith('www.') ? url : 'www.' + url);
      }
      console.log('Guessed URL (from domain):', url);
      return url;
    }

    // Otherwise, clean the name and construct URL
    const cleanName = baseName.toLowerCase()
      .replace(/\s+inc\.?$/i, '')
      .replace(/\s+llc\.?$/i, '')
      .replace(/\s+ltd\.?$/i, '')
      .replace(/\s+corporation$/i, '')
      .replace(/\s+corp\.?$/i, '')
      .replace(/\s+company$/i, '')
      .replace(/\s+co\.?$/i, '')
      .replace(/[^a-z0-9\s]/g, '')
      .replace(/\s+/g, '');
    const guessedUrl = 'https://www.' + cleanName + '.com';
    console.log('Guessed URL (from name):', guessedUrl);
    return guessedUrl;
  }

  console.log('Auto-generate mode is enabled, preparing to submit');
  const guessedUrl = guessWebsiteUrl(orgName);

  // Show generating message
  const generatingMsg = document.createElement('div');
  generatingMsg.className = 'fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50';
  generatingMsg.innerHTML = `
    <div class="bg-white rounded-lg shadow-xl max-w-md w-full mx-4 p-8 text-center">
      <div class="mb-4">
        <div class="inline-flex items-center justify-center w-16 h-16 bg-capsource-orange rounded-full mb-4">
          <svg class="animate-spin w-8 h-8 text-white" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
        </div>
        <h3 class="text-2xl font-semibold text-capsource-dark mb-2">Generating Profile</h3>
        <p class="text-capsource-mauve mb-1">for <strong>${orgName}</strong></p>
        <p class="text-sm text-capsource-mauve">Using URL: <span class="font-mono text-capsource-blue">${guessedUrl}</span></p>
      </div>
    </div>
  `;

  console.log('Appending generating message to body');
  document.body.appendChild(generatingMsg);

  // Set form values
  console.log('Setting URL input value to:', guessedUrl);
  urlInput.value = guessedUrl;

  const companyRadio = document.querySelector('input[name="organization_type"][value="company"]');
  if (companyRadio) {
    console.log('Setting organization type to company');
    companyRadio.checked = true;
  }

  // Submit form after brief delay
  console.log('Scheduling form submission in 1 second...');
  setTimeout(() => {
    console.log('=== SUBMITTING FORM NOW ===');
    console.log('Form data:', {
      url: urlInput.value,
      orgType: document.querySelector('input[name="organization_type"]:checked')?.value
    });

    // Just click the submit button - simplest and most reliable method
    if (submitBtn) {
      console.log('Clicking submit button');
      submitBtn.click();
    } else {
      console.error('Submit button not found!');
    }
  }, 1000);

  return true;
}

// Try to execute auto-generate immediately if DOM is already loaded
if (autoGenerate && orgName) {
  console.log('=== AUTO-GENERATE MODE DETECTED (IMMEDIATE) ===');
  if (document.readyState === 'loading') {
    console.log('DOM not ready yet, will wait for DOMContentLoaded');
  } else {
    console.log('DOM already loaded, executing handleAutoGenerate immediately');
    handleAutoGenerate();
  }
}

document.addEventListener('DOMContentLoaded', function() {
  console.log('=== DOMContentLoaded event fired ===');

  const form = document.getElementById('org-form');
  const submitBtn = document.getElementById('submit-btn');
  const loadingContainer = document.getElementById('loading-container');
  const progressBar = document.getElementById('progress-bar');
  const progressPercent = document.getElementById('progress-percent');
  const progressText = document.getElementById('progress-text');
  const urlInput = document.getElementById('url-input');

  console.log('URL Parameters:', {
    orgName: orgName,
    autoGenerate: autoGenerate,
    fullURL: window.location.href
  });

  function resetToInitialState() {
    if (form) {
      form.style.display = 'block';
      form.style.visibility = 'visible';
      form.classList.remove('hidden');
    }

    if (loadingContainer) {
      loadingContainer.classList.add('hidden');
      loadingContainer.style.display = 'none';
    }

    if (progressBar) progressBar.style.width = '0%';
    if (progressPercent) progressPercent.textContent = '0%';
    if (progressText) progressText.textContent = 'Initializing...';
    if (urlInput && !orgName) urlInput.value = '';
  }

  // Only reset if NOT in auto-generate mode
  if (!autoGenerate) {
    resetToInitialState();
  }

  window.addEventListener('pageshow', function(event) {
    if (!autoGenerate) {
      setTimeout(resetToInitialState, 50);
    }
  });

  // Handle pre-fill and auto-generate functionality
  if (orgName && autoGenerate) {
    console.log('DOMContentLoaded: Calling handleAutoGenerate');
    handleAutoGenerate();
  } else if (orgName) {
    // Just pre-fill without auto-submit
    console.log('DOMContentLoaded: Pre-fill mode (no auto-generate)');
    setTimeout(() => {
      if (urlInput) {
        urlInput.focus();
        urlInput.scrollIntoView({ behavior: 'smooth', block: 'center' });
      }
    }, 300);
  }

  const progressSteps = [
    { percent: 10, text: 'Fetching website...' },
    { percent: 25, text: 'Parsing HTML content...' },
    { percent: 40, text: 'AI analyzing organization information...' },
    { percent: 55, text: 'AI extracting key details...' },
    { percent: 70, text: 'AI generating description...' },
    { percent: 85, text: 'AI identifying social media...' },
    { percent: 95, text: 'Finalizing profile...' },
    { percent: 100, text: 'Complete! Redirecting...' }
  ];

  function updateProgress(step) {
    const { percent, text } = progressSteps[step];
    progressBar.style.width = percent + '%';
    progressPercent.textContent = percent + '%';
    progressText.textContent = text;
  }

  function simulateProgress() {
    let currentStep = 0;
    updateProgress(currentStep);

    const interval = setInterval(() => {
      currentStep++;
      if (currentStep < progressSteps.length) {
        updateProgress(currentStep);
      } else {
        clearInterval(interval);
      }
    }, 3500);
  }

  form.addEventListener('submit', function(e) {
    console.log('Form submit event triggered');
    const url = urlInput.value.trim();
    console.log('URL value:', url);

    if (!url) {
      console.warn('No URL provided, preventing submission');
      alert('Please enter a valid URL.');
      e.preventDefault();
      return;
    }

    console.log('Hiding form and showing loading animation');
    form.style.display = 'none';
    form.style.visibility = 'hidden';

    if (loadingContainer) {
      loadingContainer.classList.remove('hidden');
      loadingContainer.style.display = 'block';
    }

    simulateProgress();
    console.log('Form will now submit to server');
  });
});
</script>
