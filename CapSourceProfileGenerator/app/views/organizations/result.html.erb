          <div class="edit-field hidden grid grid-cols-2 gap-2">
            <%= form.text_field "collaborators[#{index}][name]", value: c["name"], class: "p-2 border border-gray-300 rounded" %>
            <%= form.text_field "collaborators[#{index}][title]", value: c["title"], class: "p-2 border border-gray-300 rounded" %>
          </div>
        </div>
      <% end %>
      <% if (@profile_data["collaborators"] || []).empty? %>
        <p class="text-gray-500 text-sm">No collaborators listed.</p>
      <% end %>
    </div>
  </div>

  <!-- Departments -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-8">
    <h2 class="text-xl font-semibold text-gray-900 mb-4">Departments (<%= @profile_data["departments"]&.length || 0 %>)</h2>
    <div class="space-y-2">
      <% (@profile_data["departments"] || []).each_with_index do |d, index| %>
        <div class="display-field text-sm text-gray-900"><%= d %></div>
        <div class="edit-field hidden">
          <%= form.text_field "departments[#{index}]", value: d, class: "w-full p-2 border border-gray-300 rounded" %>
        </div>
      <% end %>
      <% if (@profile_data["departments"] || []).empty? %>
        <p class="text-gray-500 text-sm">No departments listed.</p>
      <% end %>
    </div>
  </div>

  <!-- Similar Organizations -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-8">
    <h2 class="text-xl font-semibold text-gray-900 mb-4">Similar Organizations</h2>
    <div class="space-y-2">
      <% (@profile_data["similarOrganizations"] || []).each_with_index do |org, index| %>
        <div class="display-field text-sm">
          <%= link_to organizations_path(name: org, auto_generate: true),
              class: "text-capsource-purple hover:underline hover:text-capsource-orange transition-colors inline-flex items-center gap-1",
              title: "Generate profile for #{org}",
              target: "_blank" do %>
            <%= org %>
            <svg class="w-3 h-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
            </svg>
          <% end %>
        </div>
        <div class="edit-field hidden">
          <%= form.text_field "similarOrganizations[#{index}]", value: org, class: "w-full p-2 border border-gray-300 rounded" %>
        </div>
      <% end %>
      <% if (@profile_data["similarOrganizations"] || []).empty? %>
        <p class="text-gray-500 text-sm">No similar organizations.</p>
      <% end %>
    </div>
  </div>

  <!-- Products/Services or Programs/Offerings -->
  <% if @profile_data["productsServices"].present? && !@profile_data["productsServices"].to_s.strip.match?(/^\[Not found\]$/i) && !@profile_data["productsServices"].to_s.strip.empty? %>
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-8">
    <h2 class="text-xl font-semibold text-gray-900 mb-4">
      <%= @organization_type == 'company' ? 'Products & Services' : 'Programs & Offerings' %>
    </h2>
    <div class="prose max-w-none text-gray-700">
      <%= sanitize(@profile_data["productsServices"], tags: %w[ul ol li p strong em], attributes: %w[]) %>
    </div>
  </div>
  <% end %>

  <!-- Key Partnerships -->
  <% valid_partnerships = (@profile_data["keyPartnerships"] || []).reject { |p| p.to_s.strip.match?(/^\[Not found\]$/i) || p.to_s.strip.empty? } %>
  <% if valid_partnerships.any? %>
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-8">
    <h2 class="text-xl font-semibold text-gray-900 mb-4">Key Partnerships</h2>
    <div class="space-y-2">
      <% valid_partnerships.each do |partnership| %>
        <div class="text-sm text-gray-700">
          <span class="inline-flex items-center">
            <svg class="w-4 h-4 mr-2 text-capsource-orange" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
            <%= partnership %>
          </span>
        </div>
      <% end %>
    </div>
  </div>
  <% end %>

  <!-- Market Position -->
  <% if @profile_data["marketPosition"].present? && !@profile_data["marketPosition"].to_s.strip.match?(/^\[Not found\]$/i) && !@profile_data["marketPosition"].to_s.strip.empty? %>
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-8">
    <h2 class="text-xl font-semibold text-gray-900 mb-4">Market Position</h2>
    <div class="prose max-w-none text-gray-700">
      <%= sanitize(@profile_data["marketPosition"], tags: %w[p strong em], attributes: %w[]) %>
    </div>
  </div>
  <% end %>

  <!-- Funding Info (Companies only) -->
  <% if @organization_type == 'company' && @profile_data["fundingInfo"].present? && !@profile_data["fundingInfo"].to_s.strip.match?(/^\[Not found\]$/i) && !@profile_data["fundingInfo"].to_s.strip.empty? %>
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-8">
    <h2 class="text-xl font-semibold text-gray-900 mb-4">Funding Information</h2>
    <div class="prose max-w-none text-gray-700">
      <%= sanitize(@profile_data["fundingInfo"], tags: %w[p strong em], attributes: %w[]) %>
    </div>
  </div>
  <% end %>

  <!-- Certifications or Accreditations -->
  <% valid_certifications = (@profile_data["certifications"] || []).reject { |c| c.to_s.strip.match?(/^\[Not found\]$/i) || c.to_s.strip.empty? } %>
  <% if valid_certifications.any? %>
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-8">
    <h2 class="text-xl font-semibold text-gray-900 mb-4">
      <%= @organization_type == 'company' ? 'Certifications & Awards' : 'Accreditations & Rankings' %>
    </h2>
    <div class="space-y-2">
      <% valid_certifications.each do |cert| %>
        <div class="text-sm text-gray-700">
          <span class="inline-flex items-center">
            <svg class="w-4 h-4 mr-2 text-capsource-purple" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
            </svg>
            <%= cert %>
          </span>
        </div>
      <% end %>
    </div>
  </div>
  <% end %>

  <!-- Student Info (Universities only) -->
  <% if @organization_type == 'school' && @profile_data["studentInfo"].present? && !@profile_data["studentInfo"].to_s.strip.match?(/^\[Not found\]$/i) && !@profile_data["studentInfo"].to_s.strip.empty? %>
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-8">
    <h2 class="text-xl font-semibold text-gray-900 mb-4">Student Information</h2>
    <div class="prose max-w-none text-gray-700">
      <%= sanitize(@profile_data["studentInfo"], tags: %w[p strong em], attributes: %w[]) %>
    </div>
  </div>
  <% end %>

  <!-- Resources -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-8">
    <h2 class="text-xl font-semibold text-gray-900 mb-4">Resources</h2>
    <div class="space-y-2">
      <% (@profile_data["resources"] || []).each_with_index do |r, index| %>
        <div class="display-field text-sm text-blue-700 break-all"><%= r["title"] %> - <%= r["url"] %></div>
        <div class="edit-field hidden grid grid-cols-2 gap-2">
          <%= form.text_field "resources[#{index}][title]", value: r["title"], class: "p-2 border border-gray-300 rounded" %>
          <%= form.text_field "resources[#{index}][url]", value: r["url"], class: "p-2 border border-gray-300 rounded" %>
        </div>
      <% end %>
      <% if (@profile_data["resources"] || []).empty? %>
        <p class="text-gray-500 text-sm">No resources added.</p>
      <% end %>
    </div>
  </div>

  </div> <!-- end sidebar column -->
  </div> <!-- end grid wrapper -->

  <!-- Actions -->
  <div class="text-center pt-8">
    <%= link_to "← Generate Another Profile", organizations_path, class: "bg-gray-600 hover:bg-gray-700 text-white px-6 py-3 rounded-lg font-medium inline-block" %>
  </div>
</div>
<% end %>

<script>
(function() {
  'use strict';

  function initializeEditFunctionality() {
    const editBtn = document.getElementById('edit-btn');
    const saveBtn = document.getElementById('save-btn');
    const cancelBtn = document.getElementById('cancel-btn');
    const profileForm = document.getElementById('profile-form');

    if (!editBtn) return;

    let originalValues = {};

    function storeOriginalValues() {
      const inputs = document.querySelectorAll('.edit-field input, .edit-field textarea');
      inputs.forEach(input => {
        originalValues[input.name] = input.value;
      });
    }

    function enterEditMode() {
      storeOriginalValues();

      document.querySelectorAll('.display-field').forEach(field => {
        field.style.display = 'none';
      });

      document.querySelectorAll('.edit-field').forEach(field => {
        field.style.display = 'block';
        field.classList.remove('hidden');
      });

      editBtn.style.display = 'none';
      if (saveBtn) {
        saveBtn.style.display = 'inline-flex';
        saveBtn.classList.remove('hidden');
      }
      if (cancelBtn) {
        cancelBtn.style.display = 'inline-flex';
        cancelBtn.classList.remove('hidden');
      }
    }

    function exitEditMode() {
      document.querySelectorAll('.display-field').forEach(field => {
        field.style.display = 'block';
      });

      document.querySelectorAll('.edit-field').forEach(field => {
        field.style.display = 'none';
        field.classList.add('hidden');
      });

      editBtn.style.display = 'inline-flex';
      if (saveBtn) {
        saveBtn.style.display = 'none';
        saveBtn.classList.add('hidden');
      }
      if (cancelBtn) {
        cancelBtn.style.display = 'none';
        cancelBtn.classList.add('hidden');
      }
    }

    function restoreOriginalValues() {
      const inputs = document.querySelectorAll('.edit-field input, .edit-field textarea');
      inputs.forEach(input => {
        if (originalValues[input.name] !== undefined) {
          input.value = originalValues[input.name];
        }
      });
    }

    editBtn.addEventListener('click', function(e) {
      e.preventDefault();
      enterEditMode();
    });

    if (cancelBtn) {
      cancelBtn.addEventListener('click', function(e) {
        e.preventDefault();
        restoreOriginalValues();
        exitEditMode();
      });
    }

    if (saveBtn && profileForm) {
      saveBtn.addEventListener('click', function(e) {
        e.preventDefault();
        profileForm.submit();
      });
    }
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', function() {
      initializeEditFunctionality();
    });
  } else {
    setTimeout(function() {
      initializeEditFunctionality();
    }, 100);
  }
})();
</script>
<% end %>
