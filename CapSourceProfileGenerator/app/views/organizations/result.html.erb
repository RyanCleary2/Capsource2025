<% if @processing %>
<!-- Processing State - Show Loading -->
<div class="max-w-4xl mx-auto p-6">
  <div class="mb-6">
    <%= link_to "← Back to Home", root_path, class: "text-capsource-orange hover:text-orange-600 font-medium inline-flex items-center" %>
  </div>

  <div class="bg-white rounded-xl shadow-lg p-12 text-center">
    <!-- Spinner Animation -->
    <div class="inline-block animate-spin rounded-full h-16 w-16 border-t-4 border-b-4 border-capsource-orange mb-6"></div>

    <h2 class="text-2xl font-semibold text-capsource-dark mb-4">
      Generating Organization Profile...
    </h2>

    <p class="text-capsource-mauve mb-6 max-w-2xl mx-auto">
      Our AI is analyzing the organization's website and generating a comprehensive profile.
      This may take 30-60 seconds.
    </p>

    <div class="bg-blue-50 border-l-4 border-blue-500 text-blue-700 p-4 rounded mb-6 text-left max-w-2xl mx-auto">
      <div class="flex items-start">
        <svg class="w-5 h-5 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <div>
          <p class="font-medium mb-2">Processing Steps:</p>
          <ul class="text-sm space-y-1 list-disc list-inside">
            <li>Scraping organization website</li>
            <li>Extracting key information</li>
            <li>Enhancing data with AI</li>
            <li>Creating comprehensive profile</li>
          </ul>
        </div>
      </div>
    </div>

    <p class="text-sm text-gray-500">
      This page will automatically refresh when processing is complete.
    </p>
  </div>
</div>

<script>
  // Auto-refresh every 3 seconds while processing
  setTimeout(function() {
    window.location.reload();
  }, 3000);
</script>

<% else %>
