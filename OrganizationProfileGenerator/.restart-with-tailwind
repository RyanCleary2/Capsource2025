#!/bin/bash

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

echo -e "${YELLOW}=== Organization Profile Generator Restart Script ===${NC}\n"

# Kill any process running on port 3000
echo -e "${YELLOW}Checking for processes on port 3000...${NC}"
PORT_PID=$(lsof -ti:3000)

if [ -n "$PORT_PID" ]; then
    echo -e "${RED}Found process(es) running on port 3000: $PORT_PID${NC}"
    echo -e "${YELLOW}Killing process(es)...${NC}"
    kill -9 $PORT_PID
    sleep 1
    echo -e "${GREEN}✓ Port 3000 cleared${NC}\n"
else
    echo -e "${GREEN}✓ Port 3000 is already free${NC}\n"
fi

# Check for any remaining Rails server processes
echo -e "${YELLOW}Checking for any Rails server processes...${NC}"
RAILS_PIDS=$(pgrep -f "rails server" || true)

if [ -n "$RAILS_PIDS" ]; then
    echo -e "${RED}Found Rails server process(es): $RAILS_PIDS${NC}"
    echo -e "${YELLOW}Killing Rails processes...${NC}"
    pkill -9 -f "rails server"
    sleep 1
    echo -e "${GREEN}✓ Rails processes cleared${NC}\n"
else
    echo -e "${GREEN}✓ No Rails server processes found${NC}\n"
fi

# Check for any Tailwind watcher processes
echo -e "${YELLOW}Checking for Tailwind watcher processes...${NC}"
TAILWIND_PIDS=$(pgrep -f "tailwindcss:watch" || true)

if [ -n "$TAILWIND_PIDS" ]; then
    echo -e "${RED}Found Tailwind watcher process(es): $TAILWIND_PIDS${NC}"
    echo -e "${YELLOW}Killing Tailwind processes...${NC}"
    pkill -9 -f "tailwindcss:watch"
    sleep 1
    echo -e "${GREEN}✓ Tailwind processes cleared${NC}\n"
else
    echo -e "${GREEN}✓ No Tailwind watcher processes found${NC}\n"
fi

# Rebuild Tailwind CSS
echo -e "${BLUE}Rebuilding Tailwind CSS...${NC}"
rails tailwindcss:build --force
echo -e "${GREEN}✓ Tailwind CSS rebuilt${NC}\n"

# Start the Tailwind watcher in background
echo -e "${GREEN}Starting Tailwind CSS watcher in background...${NC}"
rails tailwindcss:watch > log/tailwind.log 2>&1 &
TAILWIND_PID=$!
echo -e "${GREEN}✓ Tailwind watcher started (PID: $TAILWIND_PID)${NC}"
echo -e "${BLUE}   Tailwind logs: tail -f log/tailwind.log${NC}\n"

# Start the Rails server
echo -e "${GREEN}Starting Rails server...${NC}"
echo -e "${YELLOW}Server will be available at: http://localhost:3000${NC}"
echo -e "${YELLOW}Press Ctrl+C to stop both Rails and Tailwind${NC}\n"

# Trap Ctrl+C to clean up both processes
trap "echo -e '\n${YELLOW}Stopping Rails server and Tailwind watcher...${NC}'; kill $TAILWIND_PID 2>/dev/null; exit 0" INT TERM

# Start Rails server (will run in foreground)
rails server

# If Rails server stops for any reason, kill Tailwind
kill $TAILWIND_PID 2>/dev/null
