<div class="max-w-6xl mx-auto p-6">
  <!-- Header Section with CapSource styling -->
  <div class="text-center mb-12">
    <h1 class="text-5xl font-bold text-capsource-dark mb-4">
      AI Organization Profile Generator
    </h1>
    <p class="text-xl text-capsource-mauve max-w-3xl mx-auto">
      Transform any company or school website into a structured profile using advanced AI technology.
      Simply enter the URL and let our system extract and organize the information.
    </p>
  </div>

  <!-- Upload Section -->
  <div class="capsource-card rounded-lg p-6 mb-8">
    <h2 class="text-2xl font-semibold mb-4 text-capsource-dark flex items-center">
      <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
      </svg>
      Generate Organization Profile
    </h2>

    <%= form_with url: "/organizations/process", method: :post, local: true, class: "space-y-4", id: "org-form", style: "display: block !important; visibility: visible !important;" do |form| %>
      <div class="mb-6">
        <label class="block text-lg font-medium text-gray-700 mb-3">Organization Type</label>
        <div class="flex gap-4">
          <label class="flex items-center p-4 border-2 border-gray-300 rounded-lg cursor-pointer hover:border-capsource-orange transition-colors flex-1">
            <%= form.radio_button :organization_type, 'company', checked: true, class: "mr-3 w-5 h-5 text-capsource-orange" %>
            <div>
              <div class="font-semibold text-gray-900">Company</div>
              <div class="text-sm text-gray-600">For businesses and organizations</div>
            </div>
          </label>
          <label class="flex items-center p-4 border-2 border-gray-300 rounded-lg cursor-pointer hover:border-capsource-orange transition-colors flex-1">
            <%= form.radio_button :organization_type, 'school', class: "mr-3 w-5 h-5 text-capsource-orange" %>
            <div>
              <div class="font-semibold text-gray-900">School / University</div>
              <div class="text-sm text-gray-600">For educational institutions</div>
            </div>
          </label>
        </div>
      </div>

      <div class="border-2 border-dashed border-gray-300 rounded-lg p-6 hover:border-capsource-orange transition-colors">
        <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
        </svg>
        <label class="block text-lg font-medium text-gray-700 mb-2 text-center">Website URL</label>
        <%= form.text_field :url, placeholder: "https://example.com", class: "w-full p-4 border-2 border-gray-300 rounded-lg text-lg focus:ring-2 focus:ring-capsource-orange focus:border-transparent", id: "url-input" %>
        <p class="text-sm text-gray-500 mt-2 text-center">Enter the homepage URL of the company or school</p>
      </div>

      <div class="text-center">
        <%= form.submit "Generate Profile", class: "capsource-button rounded-lg px-8 py-4 text-lg", id: "submit-btn" %>
      </div>
    <% end %>

    <!-- Loading Animation -->
    <div id="loading-container" class="hidden capsource-card rounded-lg p-6 text-center">
      <div class="mb-4">
        <div class="inline-flex items-center justify-center w-16 h-16 bg-capsource-orange rounded-full mb-4">
          <svg class="animate-spin w-8 h-8 text-white" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
        </div>
        <h3 class="text-2xl font-semibold text-capsource-dark mb-2">AI-Powered Website Analysis</h3>
        <p class="text-capsource-mauve mb-4">GPT-4o-mini is analyzing the website and creating a comprehensive organization profile...</p>
      </div>

      <!-- Progress Bar -->
      <div class="max-w-md mx-auto">
        <div class="flex justify-between mb-2">
          <span class="text-sm text-capsource-dark font-medium">Progress</span>
          <span class="text-sm text-capsource-dark font-medium" id="progress-percent">0%</span>
        </div>
        <div class="w-full bg-gray-200 rounded-full h-3">
          <div id="progress-bar" class="bg-gradient-to-r from-capsource-orange to-capsource-purple h-3 rounded-full transition-all duration-500 ease-out" style="width: 0%"></div>
        </div>
        <p class="text-sm text-capsource-mauve mt-2" id="progress-text">Initializing...</p>
      </div>
    </div>
  </div>

  <!-- Features Section -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
    <div class="text-center">
      <div class="w-16 h-16 bg-capsource-orange rounded-full flex items-center justify-center mx-auto mb-4">
        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
        </svg>
      </div>
      <h3 class="text-xl font-semibold text-capsource-dark mb-2">AI-Powered Web Scraping</h3>
      <p class="text-capsource-mauve">Advanced machine learning algorithms scrape and structure organization data with high accuracy.</p>
    </div>

    <div class="text-center">
      <div class="w-16 h-16 bg-capsource-purple rounded-full flex items-center justify-center mx-auto mb-4">
        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
      <h3 class="text-xl font-semibold text-capsource-dark mb-2">Structured Output</h3>
      <p class="text-capsource-mauve">Get organization information in a clean, structured format ready for the CapSource platform.</p>
    </div>

    <div class="text-center">
      <div class="w-16 h-16 bg-capsource-blue rounded-full flex items-center justify-center mx-auto mb-4">
        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
        </svg>
      </div>
      <h3 class="text-xl font-semibold text-capsource-dark mb-2">Secure & Private</h3>
      <p class="text-capsource-mauve">Your data is processed securely and never stored permanently on our servers.</p>
    </div>
  </div>

  <!-- About Section -->
  <div class="capsource-card rounded-lg p-8 text-center mb-16">
    <h3 class="text-2xl font-semibold text-capsource-dark mb-4">How It Works</h3>
    <div class="max-w-4xl mx-auto">
      <div class="flex flex-col md:flex-row items-center justify-center space-y-4 md:space-y-0 md:space-x-8">
        <div class="flex items-center">
          <div class="w-8 h-8 bg-capsource-orange text-white rounded-full flex items-center justify-center font-bold">1</div>
          <span class="ml-3 text-capsource-dark">Enter URL</span>
        </div>
        <div class="text-capsource-mauve">→</div>
        <div class="flex items-center">
          <div class="w-8 h-8 bg-capsource-orange text-white rounded-full flex items-center justify-center font-bold">2</div>
          <span class="ml-3 text-capsource-dark">AI Scraping & Analysis</span>
        </div>
        <div class="text-capsource-mauve">→</div>
        <div class="flex items-center">
          <div class="w-8 h-8 bg-capsource-orange text-white rounded-full flex items-center justify-center font-bold">3</div>
          <span class="ml-3 text-capsource-dark">Structured Profile</span>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Contact Footer Section -->
<footer class="bg-capsource-dark text-white">
  <div class="max-w-6xl mx-auto px-6 py-16">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Logo and Connect Section -->
      <div class="md:col-span-1">
        <div class="flex items-center mb-6">
          <span class="text-xl font-bold">CapSource</span>
        </div>
      </div>

      <!-- Contact Column -->
      <div>
        <h3 class="text-lg font-semibold mb-4 text-capsource-orange">Contact</h3>
        <div class="space-y-3">
          <div class="flex items-center">
            <svg class="w-5 h-5 mr-3 text-capsource-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            <span>(631) 729-0745</span>
          </div>
