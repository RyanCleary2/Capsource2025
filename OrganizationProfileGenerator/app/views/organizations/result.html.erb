  function handleSimilarOrgClick(event) {
    event.preventDefault();

    const link = event.currentTarget;
    const orgName = link.getAttribute('data-org-name');
    const orgType = link.getAttribute('data-org-type');

    if (!orgName) return;

    // Show confirmation
    const confirmMsg = `Generate profile for ${orgName}?\n\nThis will navigate to a new profile generation.`;
    if (!confirm(confirmMsg)) return;

    // Guess the organization URL
    const guessedUrl = guessOrganizationUrl(orgName, orgType);

    // Create a form and submit it
    const form = document.createElement('form');
    form.method = 'POST';
    form.action = '/organizations/process';

    // Add CSRF token
    const csrfToken = document.querySelector('meta[name="csrf-token"]');
    if (csrfToken) {
      const csrfInput = document.createElement('input');
      csrfInput.type = 'hidden';
      csrfInput.name = 'authenticity_token';
      csrfInput.value = csrfToken.getAttribute('content');
      form.appendChild(csrfInput);
    }

    // Add URL input
    const urlInput = document.createElement('input');
    urlInput.type = 'hidden';
    urlInput.name = 'url';
    urlInput.value = guessedUrl;
    form.appendChild(urlInput);

    // Add organization type
    const typeInput = document.createElement('input');
    typeInput.type = 'hidden';
    typeInput.name = 'organization_type';
    typeInput.value = orgType;
    form.appendChild(typeInput);

    // Append to body and submit
    document.body.appendChild(form);
    form.submit();
  }

  function initializeSimilarOrgLinks() {
    const links = document.querySelectorAll('.similar-org-link');
    links.forEach(link => {
      link.addEventListener('click', handleSimilarOrgClick);
    });
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initializeSimilarOrgLinks);
  } else {
    initializeSimilarOrgLinks();
  }
