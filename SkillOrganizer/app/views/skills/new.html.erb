<div class="form-container">
  <div class="form-header">
    <h1>New Skill</h1>
    <%= link_to "â† Back to Skills", skills_path, class: "btn btn-secondary" %>
  </div>

  <%= form_with url: skills_path, method: :post, class: "skill-form", local: true do |form| %>
    <!-- CSV Mode Notice -->
    <div class="demo-notice">
      <p><strong>Note:</strong> This application is running in CSV demo mode. Skill creation is currently disabled. To enable full functionality, please set up the database version.</p>
    </div>

    <div class="form-group">
      <%= form.label :name, class: "form-label" %>
      <%= form.text_field :name, class: "form-input", placeholder: "Enter skill name", value: @skill[:name], disabled: true %>
    </div>

    <div class="form-group">
      <%= form.label :description, class: "form-label" %>
      <%= form.text_area :description, class: "form-textarea", rows: 4, placeholder: "Describe this skill...", value: @skill[:description], disabled: true %>
    </div>

    <div class="form-row">
      <div class="form-group">
        <%= form.label :category_id, "Category", class: "form-label" %>
        <%= form.select :category_id,
            options_for_select(@categories.map { |cat| [cat[:name], cat[:id]] }, @skill[:category]),
            { include_blank: "Select a category" },
            { class: "form-select", disabled: true } %>
      </div>

      <div class="form-group">
        <%= form.label :skill_level, "Level", class: "form-label" %>
        <%= form.select :skill_level,
            options_for_select([
              ['Beginner', 'beginner'],
              ['Intermediate', 'intermediate'],
              ['Advanced', 'advanced']
            ], @skill[:skill_level]),
            { include_blank: "Select level" },
            { class: "form-select", disabled: true } %>
      </div>
    </div>

    <div class="form-row">
      <div class="form-group">
        <%= form.label :domain, class: "form-label" %>
        <%= form.text_field :domain, class: "form-input", placeholder: "e.g., Technology, Business", value: @skill[:domain], disabled: true %>
      </div>

      <div class="form-group">
        <%= form.label :partner, class: "form-label" %>
        <%= form.text_field :partner, class: "form-input", placeholder: "Partner organization", value: @skill[:partner], disabled: true %>
      </div>
    </div>

    <div class="form-actions">
      <%= form.submit "Create Skill", class: "btn btn-primary", disabled: true %>
      <%= link_to "Cancel", skills_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>
